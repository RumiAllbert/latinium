---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Latinium.ai - Interactive Latin Text Analysis Platform",
  description = "A cutting-edge web-based application for comprehensive Latin text analysis through intuitive visualization and interactive annotation features.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <script>
      // Apply saved theme ASAP to avoid FOUC
      try {
        const saved = localStorage.getItem("theme") || "light";
        document.documentElement.setAttribute("data-theme", saved);
        if (saved === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      } catch {}

      // Initialize Latinium data on page load
      document.addEventListener("DOMContentLoaded", () => {
        // Initialize storage system if on app pages
        if (
          typeof window !== "undefined" &&
          window.location.pathname.includes("/app")
        ) {
          // The storage will be initialized by the React components
          // This ensures compatibility with Astro's static generation
        }
      });
    </script>
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"
  >
    <div class="stars-bg fixed inset-0 z-0 opacity-8 dark:opacity-20"></div>

    <div class="relative z-10">
      <main class="w-full">
        <slot />
      </main>

      <footer
        class="container mx-auto px-4 py-8 mt-12 backdrop-blur-sm border-t border-white/5 text-center text-white/50"
      >
        <p>
          Â© {new Date().getFullYear()} Latinium.ai
        </p>
      </footer>
    </div>
  </body>
</html>

<style>
  .stars-bg {
    background-image: radial-gradient(
      circle at 1px 1px,
      var(--star-color, rgba(0, 0, 0, 0.1)) 1px,
      transparent 0
    );
    background-size: 48px 48px;
  }
</style>
