---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Latinium.ai - Interactive Latin Text Analysis Platform",
  description = "A cutting-edge web-based application for comprehensive Latin text analysis through intuitive visualization and interactive annotation features.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-gradient-to-br from-gray-900 to-gray-800 text-white min-h-screen"
  >
    <div class="stars-bg fixed inset-0 z-0 opacity-50"></div>

    <div class="relative z-10">
      <header class="container mx-auto px-4 py-6">
        <nav class="flex justify-between items-center">
          <div class="flex items-center gap-2">
            <img src="/logo.svg" alt="Latinium.ai Logo" class="h-8 w-8" />
            <h1
              class="text-2xl font-serif font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary-300 to-secondary-300"
            >
              Latinium.ai
            </h1>
          </div>
          <div class="flex gap-6">
            <a href="/" class="text-white/80 hover:text-white transition"
              >Home</a
            >
            <a href="/about" class="text-white/80 hover:text-white transition"
              >About</a
            >
            <a
              href="/examples"
              class="text-white/80 hover:text-white transition">Examples</a
            >
          </div>
        </nav>
      </header>

      <main class="container mx-auto px-4 py-8">
        <slot />
      </main>

      <footer
        class="container mx-auto px-4 py-8 mt-12 border-t border-white/10 text-center text-white/60"
      >
        <p>
          Â© {new Date().getFullYear()} Latinium.ai
        </p>
      </footer>
    </div>
  </body>
</html>

<style>
  .stars-bg {
    background-image: radial-gradient(
      circle at 1px 1px,
      rgba(255, 255, 255, 0.15) 1px,
      transparent 0
    );
    background-size: 50px 50px;
  }
</style>
