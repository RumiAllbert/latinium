---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Latinium.ai - Interactive Latin Text Analysis Platform",
  description = "A cutting-edge web-based application for comprehensive Latin text analysis through intuitive visualization and interactive annotation features.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <script>
      // Apply saved theme ASAP to avoid FOUC
      try {
        const saved = localStorage.getItem("theme") || "light";
        document.documentElement.setAttribute("data-theme", saved);
        if (saved === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      } catch {}
    </script>
  </head>
  <body class="min-h-screen">
    <div class="stars-bg fixed inset-0 z-0 opacity-40"></div>

    <div class="relative z-10">
      <main class="w-full">
        <slot />
      </main>

      <footer
        class="container mx-auto px-4 py-8 mt-12 border-t border-white/10 text-center text-white/60"
      >
        <p>
          Â© {new Date().getFullYear()} Latinium.ai
        </p>
      </footer>
    </div>
  </body>
</html>

<style>
  .stars-bg {
    background-image: radial-gradient(
      circle at 1px 1px,
      var(--star-color, rgba(0, 0, 0, 0.1)) 1px,
      transparent 0
    );
    background-size: 48px 48px;
  }
</style>
