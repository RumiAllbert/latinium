---

<div class="max-w-5xl mx-auto">
  <h2 class="text-3xl font-serif font-bold mb-12 text-center">Key Features</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      features.map((feature) => (
        <div class="glass-panel p-6 animate-slide-up">
          <div class="mb-4 text-primary-300">
            <Fragment set:html={feature.icon} />
          </div>
          <h3 class="text-xl font-medium mb-2">{feature.title}</h3>
          <p class="text-white/70">{feature.description}</p>
        </div>
      ))
    }
  </div>
</div>
