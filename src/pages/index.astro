---
import { ArrowRight } from "lucide-react";
import FeatureHighlights from "../components/FeatureHighlights";
import FloatingNav from "../components/FloatingNav";
import FluidGlass from "../components/FluidGlass";
import GradualBlur from "../components/GradualBlur";
import LogoLoop from "../components/LogoLoop";
import Prism from "../components/Prism";
import ScrambleText from "../components/ScrambleText";
import Threads from "../components/Threads";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="Latinium.ai - Interactive Latin Text Analysis Platform"
  description="A cutting-edge web-based application for comprehensive Latin text analysis through intuitive visualization and interactive annotation features."
>
  <!-- Floating Navigation -->
  <FloatingNav client:load />

  <!-- Fluid Glass mouse cursor effect -->
  <FluidGlass
    client:load
    mode="lens"
    lensProps={{
      scale: 0.25,
      ior: 1.15,
      thickness: 5,
      chromaticAberration: 0.1,
      anisotropy: 0.01,
    }}
  />

  <!-- Hero Section with enhanced React Bits-style backgrounds -->
  <section
    class="relative h-screen flex items-center justify-center overflow-hidden"
  >
    <div class="absolute inset-0 pointer-events-none -z-10">
      <Prism
        client:load
        animationType="hover"
        timeScale={0.5}
        scale={2.7}
        height={3.5}
        baseWidth={5.5}
        noise={0.1}
        glow={1.3}
        hueShift={0.46}
        colorFrequency={1.5}
      />
    </div>

    <!-- Main content -->
    <div
      class="relative z-10 max-w-6xl mx-auto px-6 text-center space-y-12 pt-24"
    >
      <!-- Professional hero content -->
      <div class="mb-20">
        <div class="text-center space-y-8">
          <!-- Main headline with enhanced typography -->
          <div class="space-y-4">
            <ScrambleText
              client:load
              text="Latinium"
              className="block font-serif text-7xl font-black md:text-9xl lg:text-[10rem] hero-text-shadow bg-gradient-to-br from-blue-200/90 via-blue-200/90 to-blue-100/90 bg-clip-text text-transparent"
              speed={60}
              delay={300}
            />
            <h2
              class="text-2xl font-medium tracking-tight hero-subtitle-shadow md:text-3xl lg:text-4xl text-white/95 font-sans"
            >
              Latin, Reimagined
            </h2>
          </div>

          <!-- Enhanced CTA buttons -->
          <div
            class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-4"
          >
            <a
              href="/app"
              class="group relative inline-flex items-center gap-3 px-8 py-4 text-lg font-semibold text-white rounded-xl backdrop-blur-md border border-white/20 bg-white/10 hover:bg-white/20 transition-all duration-300 hover:scale-105 shadow-2xl hover:shadow-blue-500/20"
              style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(147, 197, 253, 0.05) 50%, rgba(219, 234, 254, 0.1) 100%);"
            >
              <span class="relative z-10">Launch Workspace</span>
              <ArrowRight
                className="h-5 w-5 transition-transform group-hover:translate-x-1"
                client:load
              />
              <div
                class="absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(147, 197, 253, 0.1) 50%, rgba(219, 234, 254, 0.2) 100%);"
              >
              </div>
            </a>
            <a
              href="#features"
              class="inline-flex items-center gap-3 px-8 py-4 text-lg font-medium text-white/90 border-2 border-white/20 rounded-xl backdrop-blur-sm hover:bg-white/10 hover:border-white/40 transition-all duration-300"
            >
              <span>Features</span>
              <svg
                class="h-5 w-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Animated logo showcase with blur effect -->
      <div class="mb-16">
        <GradualBlur client:load>
          <div class="max-w-4xl mx-auto">
            <LogoLoop client:load />
          </div>
        </GradualBlur>
      </div>
    </div>
  </section>

  <!-- Feature Highlights Section with Threads Background -->
  <section class="relative py-20" id="features">
    <!-- Threads Background Effect -->
    <div class="absolute inset-0 pointer-events-none opacity-25 -z-10">
      <Threads
        client:load
        color={[0.4, 0.7, 1.0]}
        amplitude={1.5}
        distance={-1}
        enableMouseInteraction={true}
      />
    </div>
    <div class="max-w-6xl mx-auto px-6 space-y-16">
      <FeatureHighlights client:load />
    </div>
  </section>
</MainLayout>
