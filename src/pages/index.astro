---
import TextAnalysisPanel from "../components/TextAnalysisPanel.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="Latinium.ai - Interactive Latin Text Analysis Platform"
  description="A cutting-edge web-based application for comprehensive Latin text analysis through intuitive visualization and interactive annotation features."
>
  <div class="max-w-5xl mx-auto my-8">
    <div class="text-center mb-12">
      <h1
        class="text-4xl md:text-6xl font-serif font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary-300 to-secondary-300"
      >
        Latinium.ai
      </h1>
      <p class="text-xl text-white/80 max-w-2xl mx-auto">
        An interactive platform for Latin text analysis.
      </p>
    </div>

    <TextAnalysisPanel />
  </div>
</MainLayout>
